<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <div class="row">
      <div class="panel panel-default col-md-4">
        <div class="panel-heading">
          <h3 class="panel-title">Popis</h3>
        </div>
        <div class="panel-body">
          <%= @user.description %>
        </div>
      </div>
    </div>
  </div>
</div>