<%= semantic_form_for @user do |f| %>
    <%= render partial: 'shared/error_messages', locals: {obj: @user} %>

    <%= f.semantic_errors %>

    <%= f.inputs do %>
        <%= f.input :name, label: 'meno' %>
        <%= f.input :email, as: :email %>
        <%= f.input :city, as: :select, label: 'mesto', collection: @cities %>
        <%= f.input :birthday, as: :date_picker, label: 'dÃ¡tum narodenia', input_html: {placeholder: "YYYY-MM-DD"} %>
        <%= f.input :password, as: :password, label: 'heslo' %>
        <%= f.input :password_confirmation, as: :password, label: 'potvrdenie hesla' %>
    <% end %>
    <%= f.action :submit, label: locals[:btn_action], button_html: {class:'btn btn-primary'}%>
<% end %>