            <li><%= link_to "Použivatelia", '#' %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Môj účet <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profil", current_user %></li>
                <li><%= link_to "Nastavenia", '#' %></li>
                <li class="divider"></li>
                <li><%= link_to "Odhlásiť", logout_path, method: "delete" %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Prihlásiť sa", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
