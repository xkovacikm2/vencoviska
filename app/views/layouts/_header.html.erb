  <div class="container">
    <%= link_to "Venčoviská", '/', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Domov", '/' %></li>
        <li><%= link_to "Nápoveda", help_path %></li>
